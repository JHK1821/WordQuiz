<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:text="Please,Select your Level:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="32sp"
        android:textStyle="bold|italic"
        android:id="@+id/textView5" />

    <Button
        android:id="@+id/easy_btn"
        android:layout_width="152dp"
        android:layout_height="52dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="70dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#423BA8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="21"
        android:text="EASY"
        android:textColor="#47F3FF"
        android:textSize="32sp" />

    <Button
        android:id="@+id/medium_btn"
        android:layout_width="152dp"
        android:layout_height="52dp"
        android:layout_alignBaseline="@+id/easy_btn"
        android:layout_alignBottom="@+id/easy_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#423BA8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="21"
        android:text="MEDIUM"
        android:textColor="#47F3FF"
        android:textSize="32sp" />


    <Button
        android:id="@+id/hard_btn"
        android:layout_width="152dp"
        android:layout_height="52dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_below="@+id/easy_btn"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="73dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#423BA8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="21"
        android:text="HARD"
        android:textColor="#47F3FF"
        android:textSize="32sp" />



</RelativeLayout>