<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vivi.wordsquiz.PlayActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <TextView
        android:id="@+id/questionNumberTextView"
        android:layout_width="500dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtview1"
        android:gravity="center"
        android:text="@string/question"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="normal|bold|italic" />
    <Button
        android:id="@+id/check_btn"

        android:layout_width="152dp"
        android:layout_height="52dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#423BA8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="21"
        android:text="Submit"
        android:textColor="#47F3FF"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/wordTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionNumberTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:text=""
        android:textColor="@color/ic_launcher_background"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/txtview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:text="Guess the Word:"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Write_EditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/check_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:hint="Εισαγωγή Λέξης "
        android:inputType="text"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/holo_blue_dark"
        android:textColorHint="?attr/actionMenuTextColor"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textCursorDrawable="@android:color/holo_blue_dark"
        android:textSize="15sp"
        android:textStyle="normal|italic" />


</RelativeLayout>